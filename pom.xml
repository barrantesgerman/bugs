            <properties>
                <gtalk>barrantesgerman@gmail.com</gtalk>
                <picUrl>https://lh6.googleusercontent.com/-wZHbMUo7r48/AAAAAAAAAAI/AAAAAAAAAAA/fegpRTe0k54/s96-c/photo.jpg</picUrl>
